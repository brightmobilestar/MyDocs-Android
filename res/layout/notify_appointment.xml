<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apt_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/titlebar"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtDate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="          "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="View Appointments"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:background="@drawable/nav_back" >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background" >

        <Button
            android:id="@+id/chk_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/checkbox" >
        </Button>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chk_today"
            android:layout_centerHorizontal="true"
            android:text="Appointment Today Date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/chk_today"
            android:layout_marginLeft="16dp"
            android:text="Appointment Date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView01"
            android:layout_below="@+id/TextView02"
            android:layout_toLeftOf="@+id/TextView10"
            android:text="               "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView02"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/TextView02"
            android:text="Time :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chk_Reminder_Yes"
            android:layout_alignRight="@+id/TextView01"
            android:text="No"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/TextView09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView03"
            android:layout_below="@+id/TextView03"
            android:text="Reminder :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView02"
            android:layout_below="@+id/chk_Reminder_No"
            android:text="Reminder three time choices :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <Button
            android:id="@+id/chk_8am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView07"
            android:layout_toRightOf="@+id/TextView03"
            android:background="@drawable/checkbox" >
        </Button>

        <TextView
            android:id="@+id/txtTitle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView14"
            android:layout_below="@+id/txtTitle2"
            android:layout_marginTop="16dp"
            android:text="Phone / Office :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtTitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView14"
            android:layout_below="@+id/txtTitle2"
            android:layout_marginTop="46dp"
            android:text="Mobile # :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtPhone"
            android:layout_alignRight="@+id/txtPhone"
            android:layout_alignTop="@+id/txtTitle4"
            android:text="               "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtTitle8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtTitle4"
            android:layout_below="@+id/txtTitle4"
            android:layout_marginTop="18dp"
            android:text="Email :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtZip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtTitle0"
            android:text="               "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chk_Reminder_Yes"
            android:layout_alignRight="@+id/chk_today"
            android:text="Date :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/TextView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView07"
            android:layout_below="@+id/TextView08"
            android:layout_marginTop="16dp"
            android:text="Doctors Name :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtAddress"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/TextView14"
            android:text="               "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <Button
            android:id="@+id/chk_12pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TextView11"
            android:layout_toRightOf="@+id/chk_Reminder_Yes"
            android:background="@drawable/checkbox" >
        </Button>

        <TextView
            android:id="@+id/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chk_Reminder_No"
            android:layout_centerHorizontal="true"
            android:text="Yes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtCity"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtDoctor"
            android:text="               "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/TextView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/TextView09"
            android:layout_alignTop="@+id/txtAddress"
            android:text="Address :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/TextView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView16"
            android:layout_below="@+id/TextView16"
            android:text="City :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtState"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtAddress"
            android:text="               "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtTitle0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txtTitle4"
            android:layout_below="@+id/TextView18"
            android:text="State :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtTitle0"
            android:layout_below="@+id/txtState"
            android:text="ZIP Code :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView10"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtState"
            android:text="               "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chk_Reminder_Yes"
            android:layout_alignTop="@+id/txtTitle5"
            android:layout_toLeftOf="@+id/btnMobile"
            android:text="              "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <Button
            android:id="@+id/chk_Reminder_No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/TextView07"
            android:layout_alignTop="@+id/TextView06"
            android:background="@drawable/checkbox_checked" >
        </Button>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtMobile"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtTitle8"
            android:text="               "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <Button
            android:id="@+id/chk_Reminder_Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDate"
            android:layout_toRightOf="@+id/txtTitle5"
            android:background="@drawable/checkbox" >
        </Button>

        <TextView
            android:id="@+id/TextView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chk_8am"
            android:layout_toLeftOf="@+id/chk_Reminder_Yes"
            android:text="8am"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chk_8pm"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/chk_8pm"
            android:text="8pm"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <Button
            android:id="@+id/chk_8pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView06"
            android:layout_alignTop="@+id/TextView11"
            android:background="@drawable/checkbox" >
        </Button>

        <TextView
            android:id="@+id/TextView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chk_8pm"
            android:layout_toRightOf="@+id/TextView10"
            android:text="12pm"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chk_Reminder_Yes"
            android:layout_alignLeft="@+id/TextView06"
            android:layout_alignParentRight="true"
            android:text="               "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" >
        </TextView>

        <Button
            android:id="@+id/btnMobile"
            android:layout_marginTop="-10dp"
	        android:layout_width="32dp"
	        android:layout_height="32dp"
            android:layout_alignBottom="@+id/txtMobile"
            android:layout_alignLeft="@+id/btnPhone"
            android:background="@drawable/tel" >
        </Button>

        <Button
            android:id="@+id/btnPhone"
            android:layout_marginTop="-10dp"
	        android:layout_width="32dp"
	        android:layout_height="32dp"
            android:layout_alignTop="@+id/txtPhone"
            android:layout_toRightOf="@+id/TextView08"
            android:background="@drawable/tel" >
        </Button>

        <Button
            android:id="@+id/btnHome"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/TextView12"
            android:layout_marginBottom="21dp"
            android:background="@drawable/button"
            android:text="Home"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>