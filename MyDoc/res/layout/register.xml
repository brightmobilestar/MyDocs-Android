<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_backupemail"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:background="@drawable/transparent"
        android:text="Backup Email"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="593dp" >

       <!--  <LinearLayout
            android:id="@+id/reg_ViewGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" > -->

            <LinearLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="616dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Password"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/TextView01"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/btnRegister"
                    android:gravity="center"
                    android:hint="User Name"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Email"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editPSW"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:layout_alignLeft="@+id/password"
                    android:layout_alignRight="@+id/password"
                    android:layout_alignTop="@+id/textView1"
                    android:gravity="center"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/confirmPwd"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:layout_alignLeft="@+id/editPSW"
                    android:layout_alignRight="@+id/editPSW"
                    android:layout_alignTop="@+id/medication9name"
                    android:gravity="center"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editPhone"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:layout_alignLeft="@+id/confirmPwd"
                    android:layout_alignRight="@+id/confirmPwd"
                    android:layout_alignTop="@+id/textView2"
                    android:gravity="center"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:textSize="13dp" >

                </EditText>

                <TextView
                    android:id="@+id/medication9what"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TextView01"
                    android:layout_below="@+id/password"
                    android:text="Email"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/medication9name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/editPSW"
                    android:text="Confirm"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/medication9name"
                    android:layout_below="@+id/confirmPwd"
                    android:text="Phone"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/button"
                        android:text="Register"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnCancel1"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/button"
                        android:text="Cancel"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/btn_backupemail"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="52dp"
                    android:text="User Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="normal"
                    android:visibility="gone" />
            </LinearLayout>
      
    </ScrollView>

</LinearLayout>